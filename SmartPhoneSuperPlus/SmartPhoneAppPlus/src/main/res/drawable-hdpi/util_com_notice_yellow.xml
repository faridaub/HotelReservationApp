<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="2dp"
                android:color="#992f2f" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fef2e8"
                android:endColor="#fef2e8"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#f79646" />
            <corners
                android:radius="1dp" />
       <!--     <padding
              android:left="60dp"
              android:top="15dp"
              android:right="60dp"
              android:bottom="15dp" />-->
        </shape>
    </item>
</selector>