<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fff"
                android:endColor="#f7f7f7"
                android:angle="270" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>
</selector>