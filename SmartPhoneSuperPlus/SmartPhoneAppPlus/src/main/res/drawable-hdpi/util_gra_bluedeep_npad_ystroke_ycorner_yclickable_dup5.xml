<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="0dp"
                android:color="#992f2f" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#072680"
                android:endColor="#093eb9"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#0638ad" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
</selector>