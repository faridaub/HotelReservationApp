<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1dp"
                android:color="#fff" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#a3a3a3" />
           <stroke
                android:width="1.5dp"
                android:color="#a3a3a3" />
            <corners
                android:radius="4dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
</selector>