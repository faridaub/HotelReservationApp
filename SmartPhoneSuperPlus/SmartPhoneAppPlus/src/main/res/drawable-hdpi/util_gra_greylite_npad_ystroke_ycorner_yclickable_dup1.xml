<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="1dp" />
<!--            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />-->
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#e9e9e9"
                android:endColor="#e9e9e9"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#a292b3" />
            <corners
                android:radius="0.5dp" />
<!--            <padding
                android:left="60dp"
                android:top="15dp"
                android:right="60dp"
                android:bottom="15dp" />-->
        </shape>
    </item>
</selector>