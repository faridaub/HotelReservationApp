<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#f1eded"
                android:angle="270" />
<!--            <stroke
                android:width="1dp"
                android:color="#9b9b9b" />-->
            <corners
                android:radius="8dp" />
            <padding
                 android:left="8dp"
                 android:top="8dp"
                 android:right="8dp"
                 android:bottom="8dp" />
        </shape>
    </item>
</selector>