<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1.5dp"
                android:color="#fff" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fff"
                android:endColor="#fff"
                android:angle="270" />
           <stroke
                android:width="1.5dp"
                android:color="#a3a3a3" />
            <corners
                android:radius="4dp" />
            <padding
                 android:left="8dp"
                 android:top="8dp"
                 android:right="8dp"
                 android:bottom="8dp" />
        </shape>
    </item>
</selector>