<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="15dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="15dp"
                />
            <padding
                android:left="40dp"
                android:top="8dp"
                android:right="40dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#1058b6"
                android:endColor="#1641a1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#1641a1" />
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="6dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="6dp"
                />
           <padding
                android:left="40dp"
                android:top="8dp"
                android:right="40dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>