    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fff"
                android:endColor="#f1f1f1"
                android:angle="270" />
            <stroke
                android:width="1.5dp"
                android:color="#245ac4" />
            <corners
                android:radius="6dp" />
