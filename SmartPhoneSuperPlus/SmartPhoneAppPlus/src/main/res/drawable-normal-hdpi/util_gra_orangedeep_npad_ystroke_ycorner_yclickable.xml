<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1.5dp"
                android:color="#992f2f" />
            <corners
                android:radius="6dp" />
<!--            <padding
                android:left="5dp"
                android:top="6dp"
                android:right="5dp"
                android:bottom="6dp" />-->
