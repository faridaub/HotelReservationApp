<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4444" />
            <stroke
                android:width="1dp"
                android:color="#992f2f" />
            <corners
                android:radius="5dp" />
          <padding
                android:left="15dp"
                android:top="8dp"
                android:right="15dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#155ab8"
                android:endColor="#1d4ca1"
                android:angle="270" />
<!--            <stroke
                android:width="1dp"
                android:color="#fff" />-->
            <corners
                android:radius="6dp" />
            <padding
                android:left="15dp"
                android:top="8dp"
                android:right="15dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>