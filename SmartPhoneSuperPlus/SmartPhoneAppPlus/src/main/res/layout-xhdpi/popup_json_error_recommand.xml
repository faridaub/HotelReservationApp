<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:clickable="false"
    android:background="#00000000">

    <LinearLayout
        android:id="@+id/group_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/util_com_background_3"
        android:layout_margin="15dp">

        <LinearLayout
            android:id="@+id/linearLayout51"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/json_error_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="エラー"
                android:textColor="@color/black"
                android:checked="false"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/json_error_message"
                android:text="重複エラーデータが見つかりました"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#1058b6"
            android:paddingTop="0.5dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout66"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="はい"
                android:id="@+id/json_submit"
                android:background="@drawable/util_com_button_trans_3"
                android:textColor="@color/green_light"
                android:textSize="18dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
