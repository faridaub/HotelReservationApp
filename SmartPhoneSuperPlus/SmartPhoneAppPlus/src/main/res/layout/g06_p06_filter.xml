<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/util_com_headline_1"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp" >

            <Button
                android:id="@+id/g06_p06_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_back"
                android:drawablePadding="5dp"
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:text="戻る"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:background="@drawable/util_gra_bluedeep_button_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.13"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/g11_top_title_bar11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="絞り込み"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="16dp"
                android:layout_marginRight="30dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/util_com_headline_1"
            android:gravity="center_horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:src="@drawable/ic_p01_titel_01" />

            <TextView
                android:id="@+id/Button01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="絞り込み "
                android:textColor="@color/white"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/util_lin_blue_ypad_ystroke_ycorner_yclickable"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/group_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:touchscreenBlocksFocus="false">

                <LinearLayout
                    android:id="@+id/g06_p06_step01_room_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/util_com_background_1"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_marginBottom="-3dp"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:src="@drawable/ic_g09_map_trans"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/util_gra_whitedeep_ypad_nstroke_ycorners_clickable" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:orientation="vertical"
                        android:id="@+id/linearLayout9"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="部屋タイプ"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/g06_p06_room_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/grey_1"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:text="指定なし"
                            android:textColor="@color/white"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView8"
                        android:src="@drawable/ic_g09_arrow"
                        android:layout_marginRight="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/util_com_background_1"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_marginBottom="-3dp"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView5"
                        android:src="@drawable/ic_g09_num_rooms_trans"
                        android:background="@drawable/util_gra_whitedeep_ypad_nstroke_ycorners_clickable"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:orientation="vertical"
                        android:id="@+id/linearLayout8"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="宿泊数"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:id="@+id/linearLayout7">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="－"
                            android:textColor="@color/white"
                            android:id="@+id/g06_p06_nights_minus"
                            android:background="@drawable/util_off"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="1"
                            android:id="@+id/g06_p06_number_of_nights"
                            android:textColor="@color/black"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:paddingLeft="2dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="泊"
                            android:textColor="@color/black"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingRight="2dp"
                            android:textSize="18dp"
                            android:gravity="center" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="＋"
                            android:id="@+id/g06_p06_nights_plus"
                            android:background="@drawable/util_on"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/util_com_background_1"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:gravity="center|left"
                    android:layout_marginBottom="-3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView7"
                        android:src="@drawable/ic_g09_smoking_trans"
                        android:background="@drawable/util_gra_whitedeep_ypad_nstroke_ycorners_clickable"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:orientation="vertical"
                        android:id="@+id/linearLayout14"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="喫煙ルーム"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/g06_p06_smoking_taz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/grey_1"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:text="指定なし"
                            android:textColor="@color/white"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <ToggleButton
                        android:id="@+id/g06_p06_smoking_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="ToggleButton"
                        android:checked="false" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/g06_p06_step02_distance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/util_com_background_1"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:src="@drawable/ic_g09_calendar_trans"
                        android:background="@drawable/util_gra_whitedeep_ypad_nstroke_ycorners_clickable"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/TextView06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="距離指定"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/g06_p06_distance_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/grey_1"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:text="現在地から10Km"
                            android:textColor="@color/white"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView10"
                        android:src="@drawable/ic_g09_arrow"
                        android:layout_marginRight="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

<!--                    <Button
                        android:id="@+id/p06_p06_goto_hotel_list"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_building_trans"
                        android:drawablePadding="10dp"
                        android:background="@drawable/util_gra_bluedeep_ypad_ystroke_ycorner_yclickable"
                        android:text="ホテル 2/3軒 表示"
                        android:textColor="@color/white" />-->


                    <Button
                        android:id="@+id/p06_p06_goto_hotel_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal|center"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/ic_hotel_bld"
                        android:singleLine="true"
                        android:text="ホテル 2/3軒 表示"
                        android:paddingLeft="70dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:background="@drawable/util_com_button_1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:drawablePadding="-90dp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
