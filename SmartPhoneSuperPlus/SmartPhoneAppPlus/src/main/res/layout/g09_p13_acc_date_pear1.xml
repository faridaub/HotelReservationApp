<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/util_titlebar_background"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/util_com_headline_1"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp" >

            <Button
                android:id="@+id/g01_p13_bk_toppage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_back"
                android:drawablePadding="5dp"
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:text="戻る"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:background="@drawable/util_gra_bluedeep_button_2" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.13"
            android:background="@drawable/util_com_headline_1"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="宿泊日選択"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="16dp"
                android:layout_marginRight="30dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/util_com_headline_1"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginBottom="-3dp">

            <TextView
                android:id="@+id/Button01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="宿泊日選択"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/util_lin_blue_ypad_ystroke_ycorner_yclickable"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/util_com_background_1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="チェックイン"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/g09_p13_check_in_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:background="@drawable/util_textview_bk_pink" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:background="@drawable/ic_arrow_2"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/g11p04_current_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="チェックアウト"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/g09_p13_check_out_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:background="@drawable/util_textview_bk_pink" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/util_com_background_1"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:layout_marginBottom="-3dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/util_gra_greylite_npad_ystroke_ycorner_yclickable_dup3"
                        android:padding="10dp"
                        android:layout_marginRight="-3dp">

                        <TextView
                            android:id="@+id/textView259"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="チェックイン"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:gravity="left" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/util_gra_greylite_npad_ystroke_ycorner_yclickable_dup3"
                        android:padding="10dp"
                        android:layout_marginRight="-3dp">

                        <TextView
                            android:id="@+id/textView252"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="チェックアウト"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:gravity="left" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/util_gra_greylite_npad_ystroke_ycorner_yclickable_dup3"
                        android:padding="10dp" >

                        <TextView
                            android:id="@+id/textView258"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="泊目"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:gravity="left" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/util_com_background_1"
                        android:padding="10dp"
                        android:layout_marginRight="-3dp" >

                        <TextView
                            android:id="@+id/tv_checkin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:gravity="left" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/util_com_background_1"
                        android:padding="10dp"
                        android:layout_marginRight="-3dp" >

                        <TextView
                            android:id="@+id/tv_checkout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:gravity="left" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/util_com_background_1"
                        android:padding="10dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_numofnight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/util_com_background_1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:id="@+id/linearLayout3"
                android:gravity="center|left"
                android:padding="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout4"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:background="@drawable/ic_g09_calendar_trans" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="宿泊数"
                        android:textColor="@color/black"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="2dp"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:id="@+id/test" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textView4"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:id="@+id/linearLayout2" >

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="－"
                        android:textColor="@color/white"
                        android:id="@+id/bt_minus"
                        android:background="@drawable/util_off"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="1"
                        android:id="@+id/bt_numberofnight"
                        android:textColor="@color/black"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:paddingLeft="2dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="泊"
                        android:textColor="@color/black"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="2dp"
                        android:textSize="18dp"
                        android:gravity="center" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="＋"
                        android:id="@+id/bt_plus"
                        android:background="@drawable/util_on"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/linearLayout5">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:id="@+id/g09_p13_take_dicition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_room"
                    android:drawablePadding="10dp"
                    android:background="@drawable/util_com_button_1"
                    android:text="決　定"
                    android:textColor="@color/white"
                    android:padding="8dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>