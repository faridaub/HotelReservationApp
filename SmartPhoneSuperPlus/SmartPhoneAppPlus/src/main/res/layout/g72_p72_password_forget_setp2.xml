<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/util_titlebar_background"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp" >


            <Button
                android:id="@+id/g72_p72_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:background="@drawable/util_titlebar_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.13"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/g11_top_title_bar11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:text="パスワード恐れ"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/g70_p70_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/linearLayout63"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center" >

                    <TextView
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/button12"
                        android:background="@drawable/util_gra_bluedeep_ypad_ystroke_ycorner_nclickable_dup1"
                        android:textColor="@color/white"
                        android:padding="15dp"
                        android:textSize="12dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView25"
                        android:background="@drawable/ic_arrow_2"
                        android:layout_margin="3dp" />

                    <TextView
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:id="@+id/button11"
                        android:background="@drawable/util_gra_bluedeep_ypad_ystroke_ycorner_nclickable_dup1"
                        android:textColor="@color/white"
                        android:padding="15dp"
                        android:textSize="12dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView26"
                        android:background="@drawable/ic_arrow_2"
                        android:layout_margin="3dp" />

                    <TextView
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="パスワード再設定"
                        android:id="@+id/button9"
                        android:background="@drawable/util_brdr_blue"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView27"
                        android:background="@drawable/ic_arrow_2"
                        android:layout_margin="3dp" />

                    <TextView
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:id="@+id/button14"
                        android:background="@drawable/util_gra_bluedeep_ypad_ystroke_ycorner_nclickable_dup1"
                        android:textColor="@color/white"
                        android:padding="15dp"
                        android:textSize="12dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout141"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/util_com_background_1"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/textView100"
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/blue"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/textView292"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="パスワード"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp" >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/g72_p72_password1"
                            android:singleLine="true"
                            android:background="@drawable/util_textview_bk_pink"
                            android:layout_marginBottom="10dp"
                            android:inputType="textPassword"
                            android:hint="パスワード"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/textView253"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="アルファベット・数字を組合せ、6文字以上で設定してください。生年月日や電話番号など、第三者に推測されやすいパスワードは避けて下さい。 "
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/red"
                            android:layout_marginBottom="10dp"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/textView295"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="確認のためもう一度入力してください。 "
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/black" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:id="@+id/g72_p72_password2"
                            android:background="@drawable/util_textview_bk_pink"
                            android:hint="パスワード(確認)"
                            android:inputType="textPassword"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自動ログイン "
                            android:id="@+id/g72_p27_display_pass"
                            android:layout_gravity="left|center_horizontal"
                            android:textColor="@color/black"
                            android:checked="false" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:id="@+id/g72_p72_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="10dp"
                        android:background="@drawable/util_gra_bluedeep_npad_ystroke_ycorner_yclickable_dup2"
                        android:text="設定"
                        android:textColor="@color/white"
                        android:layout_margin="5dp"
                        android:padding="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
